<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the LinearLayout is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Change the pressed color -->
            <stroke android:color="@color/lightblack" android:width="0.5dp"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- Default state (normal) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Default color -->
        </shape>
    </item>

</selector>
