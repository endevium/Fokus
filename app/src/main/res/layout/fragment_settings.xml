<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="30dp"
            android:gravity="center" >




            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp">




                <TextView
                    android:id="@+id/tvAccountSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />




            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">


            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/etcontainer"
                android:gravity="start">




                <LinearLayout
                    android:id="@+id/changepfpBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/lightblack"
                        android:drawableStart="@drawable/profile"
                        android:drawableEnd="@drawable/snext"
                        android:text="   Change profile picture"/>




                </LinearLayout>




                <LinearLayout
                    android:id="@+id/changeuserBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lightblack"
                        android:drawableStart="@drawable/profile"
                        android:drawableEnd="@drawable/snext"
                        android:textSize="16sp"
                        android:text="   Change username"/>




                </LinearLayout>




                <LinearLayout
                    android:id="@+id/changeemailBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lightblack"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/email"
                        android:drawableEnd="@drawable/snext"
                        android:text="   Change e-mail address"/>




                </LinearLayout>




                <LinearLayout
                    android:id="@+id/changepassBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/lightblack"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/key"
                        android:drawableEnd="@drawable/snext"
                        android:textSize="16sp"
                        android:text="   Change password"/>




                </LinearLayout>








            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">




                <TextView
                    android:id="@+id/tvPomodoroSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Pomodoro Settings"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />




            </LinearLayout>




            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:background="@drawable/etcontainer"
                android:orientation="vertical"
                android:gravity="start">




                <LinearLayout
                    android:id="@+id/changeptimerBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/lightblack"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/timer"
                        android:drawableEnd="@drawable/snext"
                        android:textSize="16sp"
                        android:text="   Pomodoro Timer"/>




                </LinearLayout>




                <LinearLayout
                    android:id="@+id/changesbtimerBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/lightblack"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/timer"
                        android:drawableEnd="@drawable/snext"
                        android:textSize="16sp"
                        android:text="   Short Break Timer"/>




                </LinearLayout>




                <LinearLayout
                    android:id="@+id/changelbtimerBtn"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:background="@drawable/settingsbuttons_selector"
                    android:orientation="horizontal"
                    android:gravity="start">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lightblack"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/timer"
                        android:drawableEnd="@drawable/snext"
                        android:textSize="16sp"
                        android:text="   Long Break Timer"/>




                </LinearLayout>




            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp">




                <TextView
                    android:id="@+id/tvSoundSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Sound Settings"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />




            </LinearLayout>




            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@drawable/etcontainer"
                android:gravity="start"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="7dp">




                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/mute"
                        android:text="  Silent"
                        android:textColor="@color/lightblack"
                        android:textSize="16sp">
                    </TextView>




                    <Switch
                        android:id="@+id/silentModeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="end"
                        tools:checked="false" />




                </LinearLayout>






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start">




                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:drawableStart="@drawable/volume"
                        android:textColor="@color/lightblack"
                        android:text="  Volume"
                        android:textSize="16sp">
                    </TextView>




                    <ImageButton
                        android:id="@+id/reduceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/reduce"
                        android:background="@android:color/transparent"/>




                    <TextView
                        android:id="@+id/volumeTt"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/black"/>




                    <ImageButton
                        android:id="@+id/increaseBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/increase"
                        android:background="@android:color/transparent"/>
                </LinearLayout>




            </LinearLayout>




        </LinearLayout>




    </LinearLayout>








    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        app:itemTextColor="@color/gray"
        app:menu="@menu/bottom_nav_menu" />




</RelativeLayout>



