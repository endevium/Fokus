<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-75dp"
            android:layout_marginBottom="10dp"
            android:gravity="center" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Settings"
                android:textSize="24sp"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/etcontainer"
            android:gravity="start">

            <LinearLayout
                android:id="@+id/changepfpBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="7dp"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack"
                    android:drawableStart="@drawable/profile"
                    android:drawableEnd="@drawable/snext"
                    android:text="   Change profile picture"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changeuserBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/lightblack"
                    android:drawableStart="@drawable/profile"
                    android:drawableEnd="@drawable/snext"
                    android:textSize="16sp"
                    android:text="   Change username"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changeemailBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/email"
                    android:drawableEnd="@drawable/snext"
                    android:text="   Change e-mail address"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changepassBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblack"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/key"
                    android:drawableEnd="@drawable/snext"
                    android:textSize="16sp"
                    android:text="   Change password"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pomodoro Settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/etcontainer"
            android:orientation="vertical"
            android:gravity="start">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/rtimer"
                    android:text="   Run in background"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changeptimerBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblack"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/timer"
                    android:drawableEnd="@drawable/snext"
                    android:textSize="16sp"
                    android:text="   Pomodoro Timer"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changesbtimerBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblack"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/timer"
                    android:drawableEnd="@drawable/snext"
                    android:textSize="16sp"
                    android:text="   Short Break Timer"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changelbtimerBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblack"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/timer"
                    android:drawableEnd="@drawable/snext"
                    android:textSize="16sp"
                    android:text="   Long Break Timer"/>

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Sound Settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@drawable/etcontainer"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/mute"
                    android:text="Silent mode"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp"
                android:gravity="start">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/vibrate"
                    android:text="Vibration"
                    android:textSize="16sp"
                    android:textColor="@color/lightblack">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/notification"
                    android:text="Sound Notifications"
                    android:textColor="@color/lightblack"
                    android:textSize="16sp">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/volume"
                    android:textColor="@color/lightblack"
                    android:text="Volume"
                    android:textSize="16sp">
                </TextView>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemTextColor="@color/gray"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>